@model IEnumerable<Subject>

<h2>Subjects</h2>

<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Add Subject</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = subject.Id })" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" asp-route-id="@subject.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>
