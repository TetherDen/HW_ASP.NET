
@{
	ViewData["Title"] = "Edit Product Page";
}

@model Product

@* подключение стилей и скриптов на страницу. *@
<link asp-href-include="~/css/*.css" />
<script asp-src-include="~/js/*.js"></script>


<form asp-action="Edit"  method="POST">
	<input type="hidden" asp-for="Id" />

	<div>
		<label asp-for="Name"></label>
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Price"></label>
		<input type="number" asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Category"></label>
		<select asp-for="Category" asp-items="ViewBag.Categories" class="form-control">
			<option selected="selected" disabled="disabled">Select Category</option>
		</select>
		<span asp-validation-for="Category" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary"> Save </button>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}